<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  <link rel="icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
  {% block stylesheets %}
  {% endblock %}

  {% block javascripts %}
  {% block importmap %}{{ importmap('app') }}{% endblock %}
  {% endblock %}
</head>

<body>
  <div class="col-lg-6 mx-auto p-4 py-md-5">
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Accueil</a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="/equipe" role="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  Equipes
                </a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/equipe/creer">Créer une équipe</a></li>
                  {% if is_granted('ROLE_PROF') %}
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="/equipe/liste">Liste des équipes</a></li>
                  <li><a class="dropdown-item" href="/equipe/edit">Modifier des équipes</a></li>
                  {% endif %}
                </ul>
              </li>
              {% if is_granted('ROLE_PROF') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="/prof" role="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  Professeurs
                </a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/prof/creer">Créer un professeur</a></li>
                  {% endif %}
                  {% if is_granted('ROLE_ADMIN') %}
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="/prof/liste">Liste des professeurs</a></li>
                  <li><a class="dropdown-item" href="/prof/edit">Modifier des professeurs</a></li>
                  {% endif %}
                </ul>
              </li>
              {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item">
                <a class="nav-link" href="/admin">Administration</a>
              </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link" href="/jeu">Enigmes</a>
              </li>
              {% if app.user != null %}
              <li class="nav-item">
                <a class="nav-link" href="/logout">Se déconnecter</a>
              </li>
              {% else %}
              <li class="nav-item">
                <a class="nav-link" href="/login">Se connecter</a>
              </li>
              {% endif %}
            </ul>

          </div>
        </div>
      </nav>
    </header>
    <main>
      {% block body %}{% endblock %}
    </main>
    <footer></footer>
  </div>
</body>

</html>